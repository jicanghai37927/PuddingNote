<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Pudding.Note.Item">

    <android.support.v7.widget.CardView
        android:id="@+id/card_note"
        style="@style/Pudding.Note.Card">

        <LinearLayout
            style="@style/Pudding.Note.Layout">

            <TextView
                android:id="@+id/tv_title"
                style="@style/Pudding.Note.Title"/>

            <TextView
                android:id="@+id/tv_subtitle"
                style="@style/Pudding.Note.Subtitle"/>

            <TextView
                android:id="@+id/tv_time"
                style="@style/Pudding.Note.Time"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>